<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <PackageId>ReentrantAsyncLock</PackageId>
        <Description>A reentrant asynchronous lock</Description>
        <Version>0.3.0</Version>
        <Authors>Matthew A. Thomas</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/matthew-a-thomas/cs-reentrant-async-lock</PackageProjectUrl>
        <RepositoryUrl>https://github.com/matthew-a-thomas/cs-reentrant-async-lock</RepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Awaitable" Version="0.3.0" />
    </ItemGroup>

</Project>
